<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Silver"
    android:orientation="vertical"
    android:padding="@dimen/pa_01">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/m0500_t001"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/pa_01"
            android:text="@string/m0500_t001"
            android:textColor="@color/Black"
            android:textSize="@dimen/fontsize"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/m0500_e001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:ems="10"
            android:gravity="end"
            android:hint="@string/hint"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:padding="@dimen/pa_01"
            android:text="@string/zero"
            android:textColor="@color/Navy"
            android:textSize="@dimen/fontsize"
            android:textStyle="bold"
            tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />
    </TableRow>

    <Button
        android:id="@+id/m0500_b001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="@color/Yellow"
        android:padding="@dimen/pa_01"
        android:text="@string/m0500_b001"
        android:textColor="@color/Red"
        android:textSize="@dimen/fontsize"
        android:textStyle="bold" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/m0500_t002"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/pa_01"
            android:text="@string/m0500_t002"
            android:textColor="@color/Black"
            android:textSize="@dimen/fontsize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/m0500_t003"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Olive"
            android:gravity="end"
            android:padding="@dimen/pa_01"
            android:text="@string/zero"
            android:textColor="@color/Navy"
            android:textSize="@dimen/fontsize"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/m0500_t004"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/pa_01"
            android:text="@string/m0500_t004"
            android:textColor="@color/Black"
            android:textSize="@dimen/fontsize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/m0500_t005"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Olive"
            android:gravity="end"
            android:padding="@dimen/pa_01"
            android:text="@string/zero"
            android:textColor="@color/Navy"
            android:textSize="@dimen/fontsize"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/m0500_t006"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/pa_01"
            android:text="@string/m0500_t006"
            android:textColor="@color/Black"
            android:textSize="@dimen/fontsize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/m0500_t007"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Olive"
            android:gravity="end"
            android:padding="@dimen/pa_01"
            android:text="@string/zero"
            android:textColor="@color/Navy"
            android:textSize="@dimen/fontsize"
            android:textStyle="bold" />

    </TableRow>

    <TextView
        android:id="@+id/myname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:gravity="end"
        android:text="@string/myname"
        android:textSize="@dimen/fontsize"
        android:textStyle="bold" />

</LinearLayout>