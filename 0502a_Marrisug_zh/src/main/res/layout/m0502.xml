<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Silver"
    android:orientation="vertical"
    android:padding="@dimen/p10"
    tools:context=".M0502">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/p20"
        android:padding="@dimen/p10">

        <TextView
            android:id="@+id/m0502_t001"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/m0502_t001"
            android:textColor="@color/Navy"
            android:textSize="@dimen/fontsize"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/m0502_r001"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Aqua"
            android:checkedButton="@id/m0502_r001a"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/m0502_r001a"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/m0502_r001a"
                android:textSize="@dimen/fontsize"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/m0502_r001b"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/m0502_r001b"
                android:textSize="@dimen/fontsize"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />

        </RadioGroup>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/p20"
        android:padding="@dimen/p10">

        <TextView
            android:id="@+id/m0502_t002"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/m0502_t002"
            android:textColor="@color/Navy"
            android:textSize="@dimen/fontsize"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/m0502_r002"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Lime"
            android:checkedButton="@id/m0502_r002a">

            <RadioButton
                android:id="@+id/m0502_r002a"
                android:layout_width="@dimen/p200"
                android:layout_height="wrap_content"
                android:text="@string/m0502_r002aa"
                android:textSize="@dimen/fontsize"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/m0502_r002b"
                android:layout_width="@dimen/p200"
                android:layout_height="wrap_content"
                android:text="@string/m0502_r002ab"
                android:textSize="@dimen/fontsize"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/m0502_r002c"
                android:layout_width="@dimen/p200"
                android:layout_height="wrap_content"
                android:text="@string/m0502_r002ac"
                android:textSize="@dimen/fontsize"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />

        </RadioGroup>

    </TableRow>

    <Button
        android:id="@+id/m0502_b001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/p30"
        android:background="@color/Yellow"
        android:padding="@dimen/p10"
        android:text="@string/m0502_b001"
        android:textAllCaps="false"
        android:textColor="@color/Red"
        android:textSize="@dimen/fontsize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/m0502_t003"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/p30"
        android:text="@string/m0502_t003"
        android:textColor="@color/Maroon"
        android:textSize="@dimen/fontsize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/m0502_f000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fontsize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/myname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/p100"
        android:gravity="end"
        android:text="@string/myname"
        android:textSize="@dimen/fontsize"
        android:textStyle="bold" />
</LinearLayout>